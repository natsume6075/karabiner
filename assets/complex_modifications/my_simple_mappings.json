        { "type": "basic",
          "from": {
            "key_code": "quote"
          },
          "to": [
            {
              "key_code": "semicolon",
              "modifiers": ["shift"]
            }
          ]
        },
        { "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "quote",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    }
