      "manipulators": [
        { "type": "basic",
          "from": {
            "key_code": "open_bracket"
          },
          "to": [
            {
              "key_code": "7",
              "modifiers": ["shift"]
            }
          ]
        },
        { "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "2",
              "modifiers": ["shift"]
            }
          ]
        },
        { "type": "basic",
          "from": {
            "key_code": "7",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["shift"]
            }
          ]
        },
        { "type": "basic",
          "from": {
            "key_code": "2",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket"
            }
          ]
        }
      ]
    },
    {
      "description": "[2] ;->; +;->: :->+ +:->*",
