{
  "title": "VIM っぽい動きをする（iterm2 以外のアプリ）",
  "rules": [

    {
      "description": "[vim-mode] esc",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_unless", "name": "current_mode", "value": 0 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "escape"
          },
          "to": [
            { "set_variable": { "name": "current_mode", "value": 0 } }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            { "type": "variable_unless", "name": "current_mode", "value": 2 },
            { "type": "frontmost_application_unless", "bundle_identifiers": [ "^com\\.googlecode\\.iterm2" ] }
          ],
          "from": {
            "key_code": "escape",
            "modifiers":{"mandatory":["control"]}
          },
          "to": [
            { "set_variable": { "name": "current_mode", "value": 2 } }
          ]
        }
      ]
    },


